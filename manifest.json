{
  "manifest_version": 3,
  "name": "Social Media Downloader",
  "version": "1.1.0",
  "description": "X (Twitter), YouTube ve Instagram'dan g√∂nderi, resim ve video indirin.",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.youtube.com/*",
    "https://www.instagram.com/*",
    "https://pbs.twimg.com/*",
    "https://video.twimg.com/*",
    "https://scontent.cdninstagram.com/*",
    "https://*.cdninstagram.com/*",
    "https://*.fbcdn.net/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/twitter-interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/twitter.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/youtube.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content/instagram.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://twitter.com/*", "https://x.com/*", "https://www.youtube.com/*", "https://www.instagram.com/*"]
    }
  ]
}
